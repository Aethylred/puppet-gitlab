#
# PRODUCTION
#
production:
  adapter: postgresql
  encoding: unicode
  database: <%= @db_name %>
  pool: 10
  username: <%= @db_user %>
  password: <%= @db_user_password %>
  <%- if @db_host -%>
  host: <%= @db_host %>
  <%- else -%>
  # host: localhost
  <%- end -%>
  <%- if @db_port -%>
  port: <%= @db_port %>
  <%- else -%>
  # port: 5432
  <%- end -%>

#
# Development specific
#
development:
  adapter: postgresql
  encoding: unicode
  database: gitlabhq_development
  pool: 5
  username: postgres
  password:

#
# Staging specific
#
staging:
  adapter: postgresql
  encoding: unicode
  database: gitlabhq_staging
  pool: 5
  username: postgres
  password:

